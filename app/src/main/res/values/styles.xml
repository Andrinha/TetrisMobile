<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_menu_style">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="cell_style">
        <item name="android:background">@drawable/cell_active_background</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="button_primary_style" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="button_secondary_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="button_text_style" parent="Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="circleImageView8dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>